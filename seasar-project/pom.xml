<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.seasar</groupId>
  <artifactId>seasar-project</artifactId>
  <packaging>pom</packaging>
  <name>The Seasar Foundation</name>
  <version>1.0.0</version>
  <description>The Seasar Foundation.</description>
  <mailingLists>
    <mailingList>
      <name>Seasar-user</name>
      <subscribe>
        https://www.seasar.org/mailman/listinfo/seasar-user
      </subscribe>
      <unsubscribe>
        https://www.seasar.org/mailman/listinfo/seasar-user
      </unsubscribe>
      <post>seasar-user@ml.seasar.org</post>
      <archive>
        https://www.seasar.org/mailman/listinfo/seasar-user
      </archive>
    </mailingList>
    <mailingList>
      <name>Seasar-dev</name>
      <subscribe>
        https://www.seasar.org/mailman/listinfo/seasar-dev
      </subscribe>
      <unsubscribe>
        https://www.seasar.org/mailman/listinfo/seasar-dev
      </unsubscribe>
      <post>seasar-dev@ml.seasar.org</post>
      <archive>
        https://www.seasar.org/mailman/listinfo/seasar-dev
      </archive>
    </mailingList>
    <mailingList>
      <name>Seasar-user-en</name>
      <subscribe>
        https://www.seasar.org/mailman/listinfo/seasar-user-en
      </subscribe>
      <unsubscribe>
        https://www.seasar.org/mailman/listinfo/seasar-user-en
      </unsubscribe>
      <post>seasar-user-en@ml.seasar.org</post>
      <archive>http://ml.seasar.org/archives/seasar-user-en/</archive>
    </mailingList>
  </mailingLists>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>
      scm:svn:https://www.seasar.org/svn/seasar-project/trunk/
    </connection>
    <developerConnection>
      scm:svn:https://www.seasar.org/svn/seasar-project/trunk/
    </developerConnection>
    <url>http://svn.seasar.org/browse/?root=seasar-project</url>
  </scm>
  <organization>
    <name>The Seasar Foundation</name>
    <url>http://www.seasar.org/</url>
  </organization>
  <build>
    <defaultGoal>validate</defaultGoal>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.4</source>
            <target>1.4</target>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <configuration>
            <source>1.4</source>
            <encoding>UTF-8</encoding>
            <docencoding>UTF-8</docencoding>
            <charset>UTF-8</charset>
            <links>
              <link>
                http://java.sun.com/j2se/1.5.0/ja/docs/ja/api/
              </link>
              <link>http://java.sun.com/j2ee/1.4/docs/api/</link>
              <link>http://aopalliance.sourceforge.net/doc/</link>
            </links>
          </configuration>
          <!--
            <executions>
            <execution>
            <id>javadoc-jar</id>
            <phase>package</phase>
            <goals>
            <goal>jar</goal>
            </goals>
            </execution>
            </executions>
          -->
        </plugin>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <configuration>
            <updateReleaseInfo>true</updateReleaseInfo>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <locales>en,ja</locales>
            <inputEncoding>UTF-8</inputEncoding>
            <outputEncoding>UTF-8</outputEncoding>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>source-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>http://maven.seasar.org/maven2</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>scp://maven.seasar.org/home/groups/maven/public_html/maven2</url>
    </repository>
  </distributionManagement>
</project>
